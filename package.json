{
  "name": "techdemo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clean": "/bin/rm -fr build/*",
    "lint.check": "tslint --project . **/*.ts",
    "lint": "tslint --fix --project . **/*.ts",
    "test": "jest --coverage",
    "test.watch": "jest --watchAll --coverage",
    "server": "NODE_ENV=development nodemon bin/www | bunyan",
    "start": "ntl",
    "postlint": "npm run format",
    "format": "prettier --write 'src/**/*' bin/",
    "prettify": "./scripts/prettify.sh",
    "lint.dockerfile": "docker run --rm -i hadolint/hadolint < Dockerfile",
    "mutation.test": "stryker run"
  },
  "dependencies": {
    "amqplib": "^0.5.3",
    "body-parser": "~1.18.3",
    "clarify": "~2.1.0",
    "config": "^1.30.0",
    "express": "~4.16.4",
    "joi": "~14.3.0",
    "pg": "^7.7.1",
    "swagger-ui-express": "~4.0.1",
    "trace": "~3.1.0",
    "uuid": "~3.3.2",
    "yamljs": "~0.3.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.9",
    "@types/config": "0.0.34",
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.12",
    "@types/swagger-ui-express": "^3.0.0",
    "@types/uuid": "^3.4.4",
    "@types/yamljs": "^0.2.30",
    "eslint": "~5.9.0",
    "eslint-plugin-jest": "~22.1.0",
    "express-healthcheck": "^0.1.0",
    "jest": "^23.6.0",
    "nodemon": "~1.18.7",
    "ntl": "~3.0.0",
    "pre-commit": "~1.2.2",
    "prettier": "~1.15.3",
    "snyk": "^1.116.2",
    "stryker": "~0.33.1",
    "stryker-api": "~0.22.0",
    "stryker-html-reporter": "~0.16.9",
    "stryker-javascript-mutator": "~0.12.1",
    "stryker-jest-runner": "~1.2.9",
    "supertest": "~3.3.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-standard": "~8.0.1",
    "typescript": "^3.2.2"
  },
  "jest": {
    "resetModules": true,
    "restoreMocks": true,
    "verbose": false,
    "collectCoverage": true,
    "coverageDirectory": "build/reports/coverage/",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.testdata.*"
    ],
    "testRegex": "(src/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "roots": [
      "src"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "./jest.setup.js"
  },
  "pre-commit": [
    "lint.check",
    "lint.dockerfile",
    "test",
    "prettify"
  ]
}
