{
  "name": "techdemo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clean": "/bin/rm -fr dist/* reports/*",
    "start": "ntl",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "mutation.test": "stryker run",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "prettify": "./scripts/prettify.sh",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "lint.dockerfile": "docker run --rm -i hadolint/hadolint < Dockerfile",
    "build-docker": "docker build -t koenighotze/techdemo:`node -p \"require('./package.json').version\"` .",
    "run-docker": "docker run --rm=true -ti --init -p 3000:3000 koenighotze/techdemo:`node -p \"require('./package.json').version\"` ."
  },
  "dependencies": {
    "amqplib": "^0.5.3",
    "body-parser": "^1.18.3",
    "clarify": "^2.1.0",
    "config": "^1.31.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "joi": "^14.3.0",
    "pg": "^7.7.1",
    "trace": "^3.1.0",
    "uuid": "^3.3.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.9",
    "@types/config": "0.0.34",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.12",
    "@types/swagger-ui-express": "^3.0.0",
    "@types/uuid": "^3.4.4",
    "concurrently": "^4.1.0",
    "dts-gen": "^0.5.7",
    "eslint": "^5.10.0",
    "express-healthcheck": "^0.1.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.7",
    "ntl": "^3.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.15.3",
    "snyk": "^1.116.3",
    "stryker": "^0.33.1",
    "stryker-api": "^0.22.0",
    "stryker-html-reporter": "^0.16.9",
    "stryker-javascript-mutator": "^0.12.1",
    "stryker-jest-runner": "^1.2.9",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.2"
  },
  "pre-commit": [
    "build",
    "test",
    "lint.dockerfile",
    "prettify"
  ]
}
